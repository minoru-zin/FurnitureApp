<Window x:Class="FurnitureApp.Contents.Masters.Master00100.Master00100_EditMaterialInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FurnitureApp.Contents.Masters.Master00100"
        mc:Ignorable="d"
        Title="素材 Master00100_EditMaterialInfoWindow" Height="260" Width="500"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <StackPanel.Resources>
                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                    <Setter Property="Width" Value="80"/>
                </Style>
                <Style TargetType="TextBox" BasedOn="{StaticResource NumberTextBox}">
                    <Setter Property="Width" Value="250"/>
                    <EventSetter Event="GotFocus" Handler="TextBox_GotFocus"/>
                </Style>
            </StackPanel.Resources>
            <StackPanel Orientation="Horizontal">
                <Label Content="順番"/>
                <TextBox x:Name="SequenceTextBox"
                         LostFocus="SequenceTextBox_LostFocus"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="コード"/>
                <TextBox x:Name="CodeTextBox"
                         LostFocus="CodeTextBox_LostFocus"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="名称"/>
                <TextBox x:Name="NameTextBox"
                         Style="{StaticResource HiraganaTextBox}"
                         Width="250"
                         GotFocus="TextBox_GotFocus"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="厚さ"/>
                <TextBox x:Name="ThicknessTextBox"
                         LostFocus="ThicknessTextBox_LostFocus"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="貼り単価"/>
                <TextBox x:Name="PasteUnitPriceTextBox"
                         LostFocus="PasteUnitPriceTextBox_LostFocus"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="カットタイプ"/>
                <ComboBox Name="CutTypeComboBox"
                          ItemsSource="{Binding CutTypes}"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Code"
                          Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="更新日"/>
                <TextBox x:Name="UpdatedDateTextBox"
                         LostFocus="UpdatedDateTextBox_LostFocus"/>
            </StackPanel>

        </StackPanel>
        <DockPanel Grid.Row="1">
            <Button Name="DeleteButton"
                    Content="削除"
                    DockPanel.Dock="Left"
                    Width="100"
                    Click="DeleteButton_Click"
                    IsTabStop="False"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="UpdateButton"
                        Content="登録"
                        Width="100"
                        Click="UpdateButton_Click"/>
                <Button x:Name="CancelButton"
                        Content="キャンセル"
                        Width="100"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
